switch(global.uptext)
{
    case vk_up:
        global.uptext = "Up key"
        break;
    case vk_down:
        global.uptext = "Down key"
        break;
    case vk_left:
        global.uptext = "Left key"
        break;
    case vk_right:
        global.uptext = "Right key"
        break;
    case vk_space:
        global.uptext = "Spacebar"
        break;
    case vk_lcontrol:
        global.uptext = "Left Control"
        break;
    case vk_rcontrol:
        global.uptext = "Right Control"
        break;
    default:
        global.uptext = chr(global.up)
        break;
}
