switch(global.up)
{
    case vk_up:
        global.uptext = "Up key"
        break;
    case vk_down:
        global.uptext = "Down key"
        break;
    case vk_left:
        global.uptext = "Left key"
        break;
    case vk_right:
        global.uptext = "Right key"
        break;
    case vk_space:
        global.uptext = "Spacebar"
        break;
    case vk_control:
        global.uptext = "Control"
        break;
    default:
        global.uptext = "Error"
        break;
}
